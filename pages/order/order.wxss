/**order.wxss**/
@import "../../components/menu/menu.wxss";

page {
  height: 100%;
  background-color: #f6f8f8;
  font-family: "Microsoft Yahei, Arial, Helvetica, sans-serif";
  font-size: 12px;
}

.containers {
  background-color: #fff;
  font-family: "Source Han Sans CN";
}

.my-item {
  width: 100%;
  background: url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat 93% center;
  background-size: 16rpx auto, 88% auto;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  height: 100rpx;
  line-height: 100rpx;
}

.my-item navigator {
  padding-left: 24rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: crimson;
}

.shop {
  display: block;
  width: 100%;
  border-bottom: 1rpx solid #ddd;
  background: #fff;
  position: relative;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.shop:active {
  background: rgba(0, 0, 0, 0.1);
}

.shop-container {
  font-size: 14px;
  height: 100%;
  width: 100%;
}

.shop-detail {
  height: 100%;
  overflow: hidden;
  position: relative;
  width: 100%;
}

.shop-name {
  color: #313131;
  width: 80%;
  overflow: hidden;
  font-size: 16px;
  height: 30px;
  line-height: 30px;
  font-weight: bold;
  padding-left: 24rpx;
}

.shop-time, .shop-total, .shop-num {
  font-size: 14px;
  line-height: 20px;
  color: #999;
  width: 80%;
  padding-left: 24rpx;
}

.shop-num {
  display: flex;
  align-items: center;
}

.shop-total-text1 {
  color: red;
  font-weight: bold;
}

.shop-total-text2 {
  padding-right: 20rpx;
  color: #999;
  display: inline-block;
}

.active_statusName {
  padding: 10rpx;
  font-size: 14px;
  color: mediumseagreen;
  position: absolute;
  top: 5rpx;
  right: 20rpx;
  font-weight: bold;
}

.active_paidAmount {
  padding: 10rpx;
  font-size: 14px;
  color: blue;
  position: absolute;
  top: 50rpx;
  right: 20rpx;
  font-weight: bold;
}

/* 返回顶部图标 */

.go-top {
  position: fixed;
  top: 82%;
  right: 0;
  z-index: 99;
}

.center_top, .center_bottom {
  text-align: center;
  padding: 50rpx;
  color: #999;
}

/*顶部导航栏*/

.top-nav {
  width: 750rpx;
  position: fixed;
  top: 0;
  z-index: 1;
}

.top-nav-bar {
  display: flex;
  justify-content: space-around;
  font-size: 13px;
  padding: 10px 0;
  background-color: #fff;
  border-top: 1px solid #e5e5e5;
}

.top-nav-bar .active {
  /*border-bottom: 2px solid #09bb07;*/
  color:rgba(171, 149, 109, 0.8);
  border-bottom:2px solid rgba(171, 149, 109, 0.8);
}
