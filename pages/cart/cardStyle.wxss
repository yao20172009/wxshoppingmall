/*使屏幕变暗  */

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/*对话框 */

.commodity_attr_box {
  height: 80%;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
  padding-bottom: 40rpx;
}

.card_item {
  display: flex;
  align-items: center;
}

.card_header {
  display: flex;
  align-items: center;
  padding: 24rpx;
}

.card_header_left {
  font-size: 36rpx;
  font-weight: 700;
  width: 65%;
}

.card_header_right {
  width: 25%;
  font-size: 28rpx;
  text-align: center;
  color:green;
}

.card_header_right1 {
  width: 10%;
  text-align: center;
  display:flex;
  align-items:center;
}

.card_header_right1 image{
  width:40rpx;
  height: 40rpx;
  margin-left:20rpx;
}

.card_body {
  /* padding: 0 24rpx; */
  z-index: 999;
  height: 100%;
}

.card_body_item {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.card_body_item_left {
  width: 20%;
}

.coupon-list {
  width: 710rpx;
  margin: 0 auto;
  /* padding-bottom:120rpx; */
}

.coupon-list .item:active {
  opacity: 0.6
}

.coupon-list .item {
  width: 710rpx;
  height: 250rpx;
  margin-bottom: 20rpx;
}

.coupon-list .item .float-li {
  width: 450rpx;
  height: 100%;
  border-right: 2rpx dashed rgba(255, 255, 255, 0.3);
}

.coupon-list .item .float-li-rig {
  width: 220rpx;
  padding-right: 20rpx;
  height: 100%;
  color: #fff;
}

.event_use {
  color:#fff;
  font-size: 26rpx;
  position: absolute;
  padding:0 10rpx 0 5rpx;
}

.coupon-left-price {
  text-align: center;
}

.coupon-left {
  position: relative;
}

.coupon-left .t {
  position: absolute;
  color: #fff;
}

.coupon-left .t1 {
  left: 30rpx;
  top: 98rpx;
}

.coupon-left .t2 {
  left: 60rpx;
  top: 50rpx;
  font-size: 80rpx;
  font-weight: bold;
}

.coupon-left .t3 {
  left: 220rpx;
  top: 50rpx;
  width: 200rpx;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.coupon-left .t4 {
  left: 10rpx;
  top: 180rpx;
}

.coupon-rig .t {
  text-align: center;
}

.coupon-rig .t1 {
  font-size: 40rpx;
  padding: 30rpx 0 10rpx 0;
}

.coupon-rig .t3 {
  padding-top: 20rpx;
}

.coupon-rig .t3 text {
  background: #fff;
  color: #333;
  border-radius: 7rpx;
  padding: 10rpx 40rpx;
}

.note {
  background: #faeab7;
}

