}

.next-image {
  width: 20rpx;
  height: 25rpx;
  position: relative;
  right: 10rpx;
}

.navs {
  display: flex;
}

.nav-item {
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  /* padding: 20rpx; */
}

.nav-item .nav-image {
  width: 55rpx;
  height: 55rpx;
  margin: 5rpx;
}

.nav-itemtext {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: gray;
}

.kefu {
  background:#fff;
  text-align:left;
  color:#000;
  border: 0;
  margin:0;
  padding:0 0 0 40rpx;
  border-radius: 0;
}