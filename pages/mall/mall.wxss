@import "../../components/product/product.wxss";
@import "../../components/search/search.wxss";

/* 111111 */
page {
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #e9e9e9;
}

.navOpacity {
  display: none;
}

.header_box {
  opacity: 1;
  position: fixed;
  top:0;
  width: 100%;
}

.navbar {
  position: fixed;
  z-index: 2;
  background-color: RGB(247, 247, 247);
  width: 100%;
}

.navbar1 {
  margin-top: 80rpx;
  /* z-index:12; */
}

.nav-1 {
  flex: none;
  display: flex;
  background-color: RGB(247, 247, 247);
  height: 80rpx;
}

.nav-2 {
  background: #fff;
}

.nav-1 .wrapBar {
  display: flex;
}

.nav-1 .item {
  position: relative;
  text-align: center;
  font-size: 30rpx;
  line-height: 80rpx;
  color: gray;
  display: inline-block;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.nav-1 .item.active {
  color: red;
}

.nav-1 .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: red;
}

button {
  background: transparent;
}

button::after {
  border: 0;
}

.navbarBtn {
  flex: 0 0 15%;
}

.navbarBtn.icon {
  transform: rotate(90deg);
  width: 20rpx;
  height: 40rpx;
}

.navbarBtn.icon.active {
  transform: rotate(-90deg);
}

.blankblock {
  flex: 0 0 10%;
}

.nav-1-left {
  white-space: nowrap;
  overflow: hidden;
  flex: 0 0 85%;
}

.nav-1-left1 {
  flex: 0 0 100%;
}

.picker {
  z-index: 99;
}

.item.left2Font {
  color: black;
}

.spitLine {
  margin: 0;
  height: 2rpx;
  background-color: #e9e9e9;
}

.picker-contain {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  padding: 30rpx 0;
  position: fixed;
  background-color: RGB(247, 247, 247);
  /* z-index: 13 */
}

.picker-contain-bg {
  position: fixed;
  background-color: black;
  transition: all 1s;
  width: 100%;
  height: 100%;
  z-index: 1;
  top: 0;
  opacity: 0;
}

.picker-contain-bg.show {
  opacity: 0.5;
}

.picker-contain .item {
  background-color: RGB(215, 215, 215);
  border-radius: 30rpx;
  margin: 15rpx;
  padding: 50rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  font-size: 30rpx;
  color: RGB(161, 161, 161);
}

.picker-contain .item.active {
  color: #fff;
  background-color: #777;
}
