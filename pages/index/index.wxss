.btn {
  width: 0rpx;
  height: 0rpx;
  margin: 0;
  padding: 0;
  border-radius: 0;
  position:absolute;
  background: rgba(0, 155, 0, 0.5);
  top: 0;
  z-index: 999;
}

.vv {
  width: 200rpx;
  height: 200rpx;
  background: rgba(0, 155, 0, 0.5);
  position: fixed;
  top: 0;
}

page {
  height: 100%;
  background-color: #f6f8f8;
  font-family: "Microsoft Yahei, Arial, Helvetica, sans-serif";
  font-size: 12px;
}

.containers {
  font-family: "Source Han Sans CN";
  /* font-weight: 700; */
}

.nearby {
  padding-left: 0;
  padding-right: 0;
}

.loading {
  font-size: 32rpx;
  text-align: center;
  line-height: 2;
  margin-bottom: 20rpx;
}

.shop {
  display: block;
  width: 100%;
  height: auto;
  background: #fff;
  margin-bottom: 10rpx;
}

.shop:active {
  background: rgba(0, 0, 0, 0.1);
}

.shop-container {
  font-size: 14px;
  height: 100%;
  width: 100%;
}

.shop-logo {
  float: left;
  width: 200rpx;
  height: 100%;
  background-size: cover;
}

.shop-detail {
  height: 100%;
  overflow: hidden;
  position: relative;
  padding: 18rpx 24rpx;
}

.shop-name {
  color: #313131;
  font-size: 32rpx;
  width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 700;
}

.shop-businesses {
  color: #999;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 10rpx;
}

.shop-monthSales {
  color: #ED1B38;
  width: 30%;
  font-size: 30rpx;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  white-space: nowrap;
}

.shop-address {
  color: #999;
  text-align: left;
  font-size: 30rpx;
  width: 100%;
  display: flex;
  align-items: center;
}

.shop-address image {
  width: 30rpx;
  height: 30rpx;
}

.item_bottom {
  width: 100%;
  display: flex;
}

.item_bottom_img {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
}

.item_bottom_img image {
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.item_bottom_right {
  width: 80%;
}

