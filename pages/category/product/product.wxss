/*主容器*/

.stepper {
  width: 284rpx;
  height: 80rpx;
  /*给主容器设一个边框*/
  border: 1px solid #ccc;
  border-radius: 3px;
  margin: 0 auto;
}

.stepper text {
  margin:0
}

.stepper-total {
  /* width: 284rpx; */
  margin: 0 auto;
  text-align: right;
  color: red;
  display: flex;
}

stepper-total text {
  margin-left:10rpx;
}

.buyNum {
  padding-left: 20rpx;
}

/*加号和减号*/

.stepper text {
  width: 80rpx;
  line-height: 80rpx;
  text-align: center;
  float: left;
}

/*数值*/

.stepper input {
  width: 120rpx;
  height: 80rpx;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 34rpx;
  /*给中间的input设置左右边框即可*/
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}

/*普通样式*/

.stepper .normal {
  color: black;
}

/*禁用样式*/

.stepper .disabled {
  color: #ccc;
}

.picture_list {
  width: 100%;
