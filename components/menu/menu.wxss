/* 导航条 */

.goToCartPage {
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  bottom: 222rpx;
  right: -2rpx;
  z-index: 101;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  /* border:1rpx solid #ddd; */
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  display: flex;
  transition: all 0.2s linear 0s;
}

.daohang_img {
  width: 30rpx;
  height: 28rpx;
  line-height: 100rpx;
  margin: 5rpx;
}

.daohang_img image {
  width: 30rpx;
  height: 28rpx;
}

.daohang_text {
  font-size: 25rpx;
  padding-top: 15rpx;
}

.daohang_text1 {
  font-size: 26rpx;
  padding-top: 0rpx;
  line-height: 100rpx;
}

.daohan_box {
  width: 500rpx;
  height: 250rpx;
  position: fixed;
  bottom: 160rpx;
  right: -505rpx;
  z-index: 101;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  background: #fff;
  display: flex;
  transition: all 0.2s linear 0s;
}

.goToCartPage_active {
  right: 501rpx;
  transition: all 0.2s linear 0s;
}

.daohan_box_active {
  right: 0rpx;
  transition: all 0.2s linear 0s;
}

.toast-box {
  width: 100%;
  height: 100%;
  opacity: 1;
  position: fixed;
  top: 0px;
  left: 0px;
  background: rgba(0, 0, 0, 0.3);
  z-index: 100
}

.menu_lists {
  display: inline-block;
}

.menu_list {
  width: 100rpx;
  height: 100rpx;
  margin: 5rpx;
  text-align: center;
  padding: 10rpx;
  font-size: 24rpx;
}

.menu_list image {
  width: 60rpx;
  height: 60rpx;
  border-image-repeat: 50%;
}
